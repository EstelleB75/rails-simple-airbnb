<div class="container">
  <h1> Discover Our Flats</h1>

  <%= link_to("Add Flat") %>
  <div class="cards">
    <% @flats.each do |flat| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to(flat.name, flat_path(flat)) %></h5>
        <p class="card-text"><%= flat.address %></p>
        <p><%= flat.number_of_guests %> </p>
        <p><%= flat.price_per_night %> </p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to("More info") %>
</div>


